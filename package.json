{
    "name": "translate-variable",
    "displayName": "Translate Variable",
    "description": "Translate variable between en and zh-CN",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [{
                "command": "translateVariable.translateConfig",
                "title": "Config translate token"
            },
            {
                "command": "translateVariable.toEN",
                "title": "Translate to EN"
            },
            {
                "command": "translateVariable.toCN",
                "title": "Translate to CN"
            }
        ],
        "keybindings": [{
                "key": "ctrl+e",
                "mac": "cmd+1",
                "when": "editorTextFocus",
                "command": "translateVariable.toEN"
            },
            {
                "key": "ctrl+r",
                "mac": "cmd+2",
                "when": "editorTextFocus",
                "command": "translateVariable.toCN"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "变量翻译设置",
            "properties": {
                "translateVariable.service": {
                    "type": "string",
                    "default": "google",
                    "enum": [
                        "google",
                        "baidu"
                    ],
                    "enumDescriptions": [
                        "谷歌翻译国内可能需要梯子访问",
                        "百度翻译需要配置appid和key"
                    ],
                    "description": "选择翻译服务"
                },
                "translateVariable.baiduAppid": {
                    "type": "string",
                    "default": "",
                    "description": "百度翻译appid"
                },
                "translateVariable.baiduKey": {
                    "type": "string",
                    "default": "",
                    "description": "百度翻译key"
                },
                "translateVariable.isReplace": {
                    "type": "boolean",
                    "default": "true",
                    "description": "是否将翻译后的结果替换选中文字"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "yarn run lint"
    },
    "devDependencies": {
        "@types/vscode": "^1.63.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}